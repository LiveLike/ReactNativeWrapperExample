<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_lock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical"
    tools:visibility="visible">

    <Button
        android:id="@+id/btn_lock"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/lock_btn_background"
        android:enabled="true"
        android:text="@string/livelike_vote_label"
        android:textFontWeight="700"
        android:textAllCaps="false"
        android:textColor="@drawable/lock_btn"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/lay_textRecyclerView" />

    <TextView
        android:id="@+id/label_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:text="@string/livelike_voted_label"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_marginBottom="18dp"
        android:visibility="invisible"
        tools:visibility="visible" />
</LinearLayout>