<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/pin_chat_message_background"
    android:orientation="horizontal"
    android:padding="8dp"
    android:paddingEnd="12dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_chat_avatar"
            android:layout_width="@dimen/chatAvatarHeight"
            android:layout_height="@dimen/chatAvatarHeight"
            android:layout_gravity="top"
            android:contentDescription="@string/user_image"
            android:visibility="gone"
            app:srcCompat="@drawable/default_avatar" />


        <RelativeLayout
            android:id="@+id/img_video_thumbnail_container"
            android:layout_width="72dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/img_video_thumbnail"
                android:layout_width="@dimen/livelike_pin_video_thumbnail_width"
                android:layout_height="@dimen/livelike_pin_video_thumbnail_height"
                android:background="@drawable/video_view_background"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/default_video_thumbnail" />

            <ImageView
                android:id="@+id/ic_play_small"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignRight="@id/img_video_thumbnail"
                android:layout_alignBottom="@id/img_video_thumbnail"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/pin_video_play_background"
                android:contentDescription="@string/image"
                android:paddingBottom="2dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_play_small" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/pinIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end"
                android:background="@drawable/pin_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/chat_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:text=""
                android:textColor="@color/otherUsernameColor"
                android:textSize="@dimen/chatUserNameTextSize"
                android:textStyle="bold"
                android:visibility="gone"
                app:fontFamily="@font/livelike_chat_nickname_font"
                tools:text="Rohit Vaswani" />

        </LinearLayout>

        <TextView
            android:id="@+id/chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/chatMessageMarginTop"
            android:layout_marginEnd="12dp"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="@color/messageColor"
            android:textSize="@dimen/chatMessageTextSize"
            app:fontFamily="@font/livelike_chat_message_font"
            tools:ignore="HardcodedText"
            tools:text="@tools:sample/lorem[30]" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/closeBtnContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingEnd="3dp"
        android:paddingStart="6dp"
        android:paddingBottom="6dp"
        >

        <ImageButton
            android:id="@+id/closeIconBtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="start"
            android:background="@drawable/close_icon" />
    </LinearLayout>


</LinearLayout>